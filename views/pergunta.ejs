<%- include ('partials/header.ejs') %>

    <body>

        <%- include ('partials/navbar.ejs') %>

            <div class="container" style="border:1px solid green; margin-top:40px; padding:10px">
                <br>
                <h1 style="color:white">
                    <%= pergunta.titulo %>
                </h1>
                <p style="color:white">
                    <%= pergunta.descricao %>
                </p>
                <hr style="background-color:white">

                <form action="/responder" method="POST">
                    <h3 style="color:white">Responda</h3>
                    <textarea name="corpo" cols="30" placeholder="Digite sua resposta" class="form-control"></textarea>
                    <br>
                    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-success">Responder</button>
                </form>
                <hr>
                <h3 style="color:white">Respostas</h3>
                <% respostas.forEach(resposta =>{ %>
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo %>
                            </p>
                        </div>
                    </div>
                    <br>
                    <% }) %>

            </div>

    </body>
    <%- include ('partials/footer.ejs') %>